{
  "name": "Grouparoo",
  "description": "Grouparoo - The Open Source Customer Data Sync Framework",
  "repository": "https://github.com/grouparoo/grouparoo",
  "website": "https://www.grouparoo.com",
  "logo": "https://raw.githubusercontent.com/grouparoo/grouparoo/main/core/public/images/logo/logo.svg",
  "success_url": "/",
  "keywords": [
    "marketing",
    "marketing-automation",
    "marketing-tools",
    "marketing-analytics",
    "nodejs",
    "typescript",
    "big-data",
    "events",
    "actionhero",
    "email",
    "push-notifications",
    "communication"
  ],
  "addons": [{ "plan": "heroku-redis" }, { "plan": "heroku-postgresql" }],
  "env": {
    "WEB_URL": {
      "description": "The URL of this application, usually https://{app-name}.herokuapp.com",
      "required": true
    },
    "SERVER_TOKEN": {
      "description": "A random key to identify this cluster",
      "generator": "secret",
      "required": true
    },
    "GROUPAROO_LOGS_STDOUT_DISABLE_COLOR": "true",
    "GROUPAROO_LOGS_STDOUT_DISABLE_TIMESTAMP": "true"
  }
}
